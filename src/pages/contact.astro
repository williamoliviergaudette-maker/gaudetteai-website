---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout title="Contact">
  <!-- Combined Hero + Form Section - Single Card -->
  <section class="bg-gray-100">
    <div class="container mx-auto px-4 pt-16 pb-16 max-w-2xl">
      <div class="bg-white p-8 rounded-xl border border-gray-200 shadow-lg">
        <!-- Hero Content -->
        <div class="mb-8">
          <div class="inline-block mb-4">
            <div class="h-1 w-20 bg-gradient-to-r from-blue-600 to-blue-400 rounded-full mb-6"></div>
          </div>
          <h1 class="text-4xl font-bold mb-6 text-gray-900">Get In Touch</h1>
          <p class="text-lg text-gray-700 leading-relaxed">
            Ready to implement Knowledge That Compounds? 
            <br> Let's discuss your needs.
          </p>
        </div>

        <!-- Divider -->
        <div class="border-t border-gray-200 mb-8"></div>

        <!-- Contact Form -->
        <form name="contact" method="POST" data-netlify="true" class="space-y-6">
          <input type="hidden" name="form-name" value="contact" />
          
          <div>
            <label for="name" class="block text-sm font-semibold mb-2 text-gray-900">Name</label>
            <input 
              type="text" 
              id="name" 
              name="name" 
              required 
              class="w-full px-4 py-3 bg-gray-50 border-2 border-gray-200 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 focus:bg-white text-gray-900 transition-all"
              placeholder="Your full name"
            />
          </div>

          <div>
            <label for="email" class="block text-sm font-semibold mb-2 text-gray-900">Email</label>
            <input 
              type="email" 
              id="email" 
              name="email" 
              required 
              class="w-full px-4 py-3 bg-gray-50 border-2 border-gray-200 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 focus:bg-white text-gray-900 transition-all"
              placeholder="you@company.com"
            />
          </div>

          <div>
            <label for="company" class="block text-sm font-semibold mb-2 text-gray-900">Company <span class="text-gray-500 font-normal">(optional)</span></label>
            <input 
              type="text" 
              id="company" 
              name="company" 
              class="w-full px-4 py-3 bg-gray-50 border-2 border-gray-200 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 focus:bg-white text-gray-900 transition-all"
              placeholder="Your company name"
            />
          </div>

          <div>
            <label for="message" class="block text-sm font-semibold mb-2 text-gray-900">Message</label>
            <textarea 
              id="message" 
              name="message" 
              rows="5" 
              required 
              class="w-full px-4 py-3 bg-gray-50 border-2 border-gray-200 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 focus:bg-white text-gray-900 transition-all resize-none"
              placeholder="Tell us about your needs..."
            ></textarea>
          </div>

          <button 
            type="submit" 
            class="w-full bg-blue-600 text-white py-4 rounded-lg hover:bg-blue-700 font-semibold text-lg shadow-lg hover:shadow-xl transition-all hover:-translate-y-0.5"
          >
            Send Message
          </button>
        </form>
      </div>

      <!-- Contact Info - Separate Card Below -->
      <div class="mt-8 p-8 bg-white rounded-xl border border-gray-200 shadow-lg">
        <h3 class="text-xl font-bold text-gray-900 mb-4">Other Ways to Reach Us</h3>
        <div class="space-y-3">
          <p class="text-gray-700">
            <strong class="text-gray-900">Email:</strong> contact@gaudetteai.com
          </p>
          <p class="text-gray-700">
            <strong class="text-gray-900">Based in:</strong> Sherbrooke, QC
          </p>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>