---
import BaseLayout from '../layouts/BaseLayout.astro';
---
<BaseLayout title="Consulting">
  <!-- Hero Section with Gradient -->
  <section class="bg-gradient-to-br from-blue-50 via-white to-blue-50 border-b border-gray-200">
    <div class="container mx-auto px-4 py-16 max-w-4xl">
      <div class="inline-block mb-4">
        <div class="h-1 w-20 bg-gradient-to-r from-blue-600 to-blue-400 rounded-full mb-6"></div>
      </div>
      <h1 class="text-4xl font-bold mb-6 text-gray-900">Consulting Services</h1>
      <p class="text-lg text-gray-700 leading-relaxed max-w-2xl">
        We help organizations implement Knowledge That Compounds systems.
      </p>
    </div>
  </section>

  <!-- Pricing Cards Section -->
  <section class="bg-white py-16">
    <div class="container mx-auto px-4 max-w-5xl">
      <div class="grid gap-8 md:grid-cols-2">
        <!-- Starter Card -->
        <div class="group bg-white border-2 border-gray-200 p-8 rounded-xl transition-all duration-300 hover:-translate-y-2 hover:shadow-2xl hover:border-blue-400 cursor-pointer relative overflow-hidden">
          <div class="absolute top-0 left-0 w-full h-1 bg-gradient-to-r from-blue-600 to-blue-400"></div>
          <div class="text-5xl mb-6">üöÄ</div>
          <h3 class="text-2xl font-bold mb-4 text-gray-900">Starter</h3>
          <p class="text-gray-700 mb-6 leading-relaxed">
            Templates and guidance to implement 1-2 Brains yourself.
          </p>
          <div class="pt-4 border-t border-gray-200">
            <p class="text-sm text-gray-500 font-semibold uppercase tracking-wide mb-1">Starting at</p>
            <p class="text-3xl font-bold text-gray-900">$500</p>
          </div>
        </div>

        <!-- Professional Card - Featured -->
        <div class="group bg-gradient-to-br from-blue-50 to-white border-2 border-blue-400 p-8 rounded-xl transition-all duration-300 hover:-translate-y-2 hover:shadow-2xl cursor-pointer relative overflow-hidden shadow-lg">
          <div class="absolute top-0 left-0 w-full h-1 bg-gradient-to-r from-blue-600 to-blue-400"></div>
          <div class="absolute top-4 right-4 bg-blue-600 text-white text-xs font-bold px-3 py-1 rounded-full">POPULAR</div>
          <div class="text-5xl mb-6">üíº</div>
          <h3 class="text-2xl font-bold mb-4 text-gray-900">Professional</h3>
          <p class="text-gray-700 mb-6 leading-relaxed">
            We architect 2-3 Brain networks and train your team.
          </p>
          <div class="pt-4 border-t border-blue-200">
            <p class="text-sm text-gray-500 font-semibold uppercase tracking-wide mb-1">Starting at</p>
            <p class="text-3xl font-bold text-gray-900">$5,000</p>
          </div>
        </div>

        <!-- Enterprise Card - Full Width -->
        <div class="group bg-white border-2 border-gray-200 p-8 rounded-xl md:col-span-2 transition-all duration-300 hover:-translate-y-2 hover:shadow-2xl hover:border-blue-400 cursor-pointer relative overflow-hidden">
          <div class="absolute top-0 left-0 w-full h-1 bg-gradient-to-r from-blue-600 to-blue-400"></div>
          <div class="text-5xl mb-6">üè¢</div>
          <h3 class="text-2xl font-bold mb-4 text-gray-900">Enterprise</h3>
          <p class="text-gray-700 mb-6 leading-relaxed max-w-3xl">
            Full Standards 1-14, done-for-you implementation, 
            self-improving systems.
          </p>
          <div class="pt-4 border-t border-gray-200">
            <p class="text-sm text-gray-500 font-semibold uppercase tracking-wide mb-1">Starting at</p>
            <p class="text-3xl font-bold text-gray-900">$50,000</p>
          </div>
        </div>
      </div>

      <!-- CTA Section -->
      <div class="mt-16 text-center">
        <a href="/contact" class="inline-block bg-blue-600 text-white px-10 py-4 rounded-lg hover:bg-blue-700 font-semibold text-lg shadow-xl hover:shadow-2xl transition-all hover:-translate-y-1">
          Schedule Discovery Call
        </a>
      </div>
    </div>
  </section>
</BaseLayout>