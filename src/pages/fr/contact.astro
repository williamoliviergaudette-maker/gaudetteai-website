---
import BaseLayout from '../../layouts/BaseLayout.astro';
---

<BaseLayout title="Contact" lang="fr">
  <div class="max-w-2xl mx-auto">
    <h1 class="text-4xl font-bold mb-6 text-gray-900">Contactez-Nous</h1>
    
    <form name="contact-fr" method="POST" data-netlify="true" class="space-y-6">
      <input type="hidden" name="form-name" value="contact-fr" />
      
      <div>
        <label for="name" class="block text-sm font-medium mb-2 text-gray-700">Nom</label>
        <input 
          type="text" 
          id="name" 
          name="name" 
          required 
          class="w-full px-4 py-2 bg-white border-2 border-gray-200 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 text-gray-900 transition-all"
        />
      </div>

      <div>
        <label for="email" class="block text-sm font-medium mb-2 text-gray-700">Courriel</label>
        <input 
          type="email" 
          id="email" 
          name="email" 
          required 
          class="w-full px-4 py-2 bg-white border-2 border-gray-200 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 text-gray-900 transition-all"
        />
      </div>

      <div>
        <label for="company" class="block text-sm font-medium mb-2 text-gray-700">Entreprise (optionnel)</label>
        <input 
          type="text" 
          id="company" 
          name="company" 
          class="w-full px-4 py-2 bg-white border-2 border-gray-200 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 text-gray-900 transition-all"
        />
      </div>

      <div>
        <label for="message" class="block text-sm font-medium mb-2 text-gray-700">Message</label>
        <textarea 
          id="message" 
          name="message" 
          rows="5" 
          required 
          class="w-full px-4 py-2 bg-white border-2 border-gray-200 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 text-gray-900 transition-all"
        ></textarea>
      </div>

      <button 
        type="submit" 
        class="w-full bg-blue-600 text-white py-3 rounded-lg hover:bg-blue-700 font-semibold shadow-md hover:shadow-lg transition-all"
      >
        Envoyer le Message
      </button>
    </form>

    <div class="mt-12 pt-12 border-t border-gray-200 text-center">
      <p class="text-gray-700 mb-2">
        <strong>Courriel:</strong> fredericgaudette@hotmail.com
      </p>
      <p class="text-gray-700">
        <strong>Basé à:</strong> Sherbrooke, QC
      </p>
    </div>
  </div>
</BaseLayout>