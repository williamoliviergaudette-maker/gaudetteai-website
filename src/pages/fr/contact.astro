---
import BaseLayout from '../../layouts/BaseLayout.astro';
---

<BaseLayout title="Contact" lang="fr">
  <!-- Combined Hero + Form Section - Single Card -->
  <section class="bg-gray-100">
    <div class="container mx-auto px-4 pt-16 pb-16 max-w-2xl">
      <div class="bg-white p-8 rounded-xl border border-gray-200 shadow-lg">
        <!-- Hero Content -->
        <div class="mb-8">
          <div class="inline-block mb-4">
            <div class="h-1 w-20 bg-gradient-to-r from-blue-600 to-blue-400 rounded-full mb-6"></div>
          </div>
          <h1 class="text-4xl font-bold mb-6 text-gray-900">Contactez-Nous</h1>
          <p class="text-lg text-gray-700 leading-relaxed">
            Prêt à implémenter Knowledge That Compounds? 
            <br>Discutons de vos besoins.
          </p>
        </div>

        <!-- Divider -->
        <div class="border-t border-gray-200 mb-8"></div>

        <!-- Contact Form -->
        <form name="contact-fr" method="POST" data-netlify="true" class="space-y-6">
          <input type="hidden" name="form-name" value="contact-fr" />
          
          <div>
            <label for="name" class="block text-sm font-semibold mb-2 text-gray-900">Nom</label>
            <input 
              type="text" 
              id="name" 
              name="name" 
              required 
              class="w-full px-4 py-3 bg-gray-50 border-2 border-gray-200 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 focus:bg-white text-gray-900 transition-all"
              placeholder="Votre nom complet"
            />
          </div>

          <div>
            <label for="email" class="block text-sm font-semibold mb-2 text-gray-900">Courriel</label>
            <input 
              type="email" 
              id="email" 
              name="email" 
              required 
              class="w-full px-4 py-3 bg-gray-50 border-2 border-gray-200 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 focus:bg-white text-gray-900 transition-all"
              placeholder="vous@entreprise.com"
            />
          </div>

          <div>
            <label for="company" class="block text-sm font-semibold mb-2 text-gray-900">Entreprise <span class="text-gray-500 font-normal">(optionnel)</span></label>
            <input 
              type="text" 
              id="company" 
              name="company" 
              class="w-full px-4 py-3 bg-gray-50 border-2 border-gray-200 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 focus:bg-white text-gray-900 transition-all"
              placeholder="Nom de votre entreprise"
            />
          </div>

          <div>
            <label for="message" class="block text-sm font-semibold mb-2 text-gray-900">Message</label>
            <textarea 
              id="message" 
              name="message" 
              rows="5" 
              required 
              class="w-full px-4 py-3 bg-gray-50 border-2 border-gray-200 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 focus:bg-white text-gray-900 transition-all resize-none"
              placeholder="Parlez-nous de vos besoins..."
            ></textarea>
          </div>

          <button 
            type="submit" 
            class="w-full bg-blue-600 text-white py-4 rounded-lg hover:bg-blue-700 font-semibold text-lg shadow-lg hover:shadow-xl transition-all hover:-translate-y-0.5"
          >
            Envoyer le Message
          </button>
        </form>
      </div>

      <!-- Contact Info - Separate Card Below -->
      <div class="mt-8 p-8 bg-white rounded-xl border border-gray-200 shadow-lg">
        <h3 class="text-xl font-bold text-gray-900 mb-4">Autres Moyens de Nous Joindre</h3>
        <div class="space-y-3">
          <p class="text-gray-700">
            <strong class="text-gray-900">Courriel:</strong> contactgaudetteai@gmail.com
          </p>
          <p class="text-gray-700">
            <strong class="text-gray-900">Basé à:</strong> Sherbrooke, QC
          </p>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>