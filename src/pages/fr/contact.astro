---
import BaseLayout from '../../layouts/BaseLayout.astro';
---

<BaseLayout title="Contact" lang="fr">
  <!-- Hero Section - No border -->
  <section class="bg-gray-900">
    <div class="container mx-auto px-4 pt-16 pb-8 max-w-2xl">
      <div class="inline-block mb-4">
        <div class="h-1 w-20 bg-gradient-to-r from-blue-500 to-blue-400 rounded-full mb-6"></div>
      </div>
      <h1 class="text-4xl font-bold mb-6 text-white">Contactez-Nous</h1>
      <p class="text-lg text-gray-300 leading-relaxed">
        Prêt à implémenter Connaissance Qui Se Multiplie? Discutons de vos besoins.
      </p>
    </div>
  </section>

  <!-- Form Section - Seamless continuation -->
  <section class="bg-gray-900 pb-16">
    <div class="container mx-auto px-4 max-w-2xl">
      <form name="contact-fr" method="POST" data-netlify="true" class="space-y-6 bg-gray-800 border border-gray-700 rounded-xl p-8 shadow-lg">
        <input type="hidden" name="form-name" value="contact-fr" />
        
        <div>
          <label for="name" class="block text-sm font-semibold mb-2 text-white">Nom</label>
          <input 
            type="text" 
            id="name" 
            name="name" 
            required 
            class="w-full px-4 py-3 bg-gray-900 border-2 border-gray-700 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 focus:bg-gray-800 text-white transition-all"
            placeholder="Votre nom complet"
          />
        </div>

        <div>
          <label for="email" class="block text-sm font-semibold mb-2 text-white">Courriel</label>
          <input 
            type="email" 
            id="email" 
            name="email" 
            required 
            class="w-full px-4 py-3 bg-gray-900 border-2 border-gray-700 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 focus:bg-gray-800 text-white transition-all"
            placeholder="vous@entreprise.com"
          />
        </div>

        <div>
          <label for="company" class="block text-sm font-semibold mb-2 text-white">Entreprise <span class="text-gray-400 font-normal">(optionnel)</span></label>
          <input 
            type="text" 
            id="company" 
            name="company" 
            class="w-full px-4 py-3 bg-gray-900 border-2 border-gray-700 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 focus:bg-gray-800 text-white transition-all"
            placeholder="Nom de votre entreprise"
          />
        </div>

        <div>
          <label for="message" class="block text-sm font-semibold mb-2 text-white">Message</label>
          <textarea 
            id="message" 
            name="message" 
            rows="5" 
            required 
            class="w-full px-4 py-3 bg-gray-900 border-2 border-gray-700 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 focus:bg-gray-800 text-white transition-all resize-none"
            placeholder="Parlez-nous de vos besoins..."
          ></textarea>
        </div>

        <button 
          type="submit" 
          class="w-full bg-blue-600 text-white py-4 rounded-lg hover:bg-blue-700 font-semibold text-lg shadow-lg hover:shadow-xl transition-all hover:-translate-y-0.5"
        >
          Envoyer le Message
        </button>
      </form>

      <!-- Contact Info -->
      <div class="mt-12 p-8 bg-gray-800 rounded-xl border border-gray-700 shadow-lg">
        <h3 class="text-xl font-bold text-white mb-4">Autres Moyens de Nous Joindre</h3>
        <div class="space-y-3">
          <p class="text-gray-300">
            <strong class="text-white">Courriel:</strong> fredericgaudette@hotmail.com
          </p>
          <p class="text-gray-300">
            <strong class="text-white">Basé à:</strong> Sherbrooke, QC
          </p>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>