---
// BlogPostCard component - displays a preview card for a blog post
const { post } = Astro.props;

// Format date for display
const formattedDate = new Date(post.data.pubDate).toLocaleDateString('en-US', {
  year: 'numeric',
  month: 'long',
  day: 'numeric'
});

// Generate the post URL
const postUrl = `/blog/${post.slug}`;
---

<article class="bg-white rounded-lg shadow-sm hover:shadow-md transition-shadow duration-200 overflow-hidden">
  <a href={postUrl} class="block p-8">
    <!-- Post metadata -->
    <div class="flex items-center gap-3 text-sm text-gray-600 mb-4">
      <time datetime={post.data.pubDate.toISOString()}>
        {formattedDate}
      </time>
      <span>•</span>
      <span>{post.data.author}</span>
    </div>

    <!-- Post title -->
    <h2 class="text-2xl font-bold text-gray-900 mb-3 hover:text-blue-600 transition-colors">
      {post.data.title}
    </h2>

    <!-- Post description -->
    <p class="text-gray-600 mb-4 leading-relaxed">
      {post.data.description}
    </p>

    <!-- Tags -->
    {post.data.tags.length > 0 && (
      <div class="flex flex-wrap gap-2 mt-4">
        {post.data.tags.map((tag) => (
          <span class="inline-block bg-gray-100 text-gray-700 text-sm px-3 py-1 rounded-full">
            {tag}
          </span>
        ))}
      </div>
    )}

    <!-- Read more link -->
    <div class="mt-6">
      <span class="text-blue-600 font-medium hover:text-blue-700">
        Read more →
      </span>
    </div>
  </a>
</article>
